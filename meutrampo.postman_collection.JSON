{
  "info": {
    "name": "FIWARE - Lamp + PIR (Corrigido)",
    "_postman_id": "fiware-lamp-pir-rebuilt",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },

  "variable": [
    { "key": "host", "value": "46.17.108.113" },
    { "key": "apikey", "value": "TEF" }
  ],

  "item": [

    {
      "name": "IoT Agent",
      "item": [

        {
          "name": "1. Health",
          "request": {
            "method": "GET",
            "url": "http://{{host}}:4041/iot/about"
          }
        },

        {
          "name": "2. Create Service Group",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "fiware-service", "value": "smart" },
              { "key": "fiware-servicepath", "value": "/" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"services\": [\n    {\n      \"apikey\": \"{{apikey}}\",\n      \"cbroker\": \"http://{{host}}:1026\",\n      \"entity_type\": \"Device\",\n      \"resource\": \"\"\n    }\n  ]\n}"
            },
            "url": "http://{{host}}:4041/iot/services"
          }
        },

        {
          "name": "3. Create Device device001",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "fiware-service", "value": "smart" },
              { "key": "fiware-servicepath", "value": "/" }
            ],
            "body": {
              "mode": "raw",
              "raw":
"{\n  \"devices\": [\n    {\n      \"device_id\": \"device001\",\n      \"entity_name\": \"urn:ngsi-ld:Device:001\",\n      \"entity_type\": \"Device\",\n      \"protocol\": \"PDI-IoTA-UltraLight\",\n      \"transport\": \"MQTT\",\n      \"attributes\": [\n        { \"object_id\": \"s\", \"name\": \"state\", \"type\": \"Text\" },\n        { \"object_id\": \"m\", \"name\": \"motion\", \"type\": \"Integer\" },\n        { \"object_id\": \"l\", \"name\": \"luminosity\", \"type\": \"Integer\" }\n      ],\n      \"commands\": [\n        { \"name\": \"on\", \"type\": \"command\" },\n        { \"name\": \"off\", \"type\": \"command\" }\n      ]\n    }\n  ]\n}"
            },
            "url": "http://{{host}}:4041/iot/devices"
          }
        },

        {
          "name": "4. List Devices",
          "request": {
            "method": "GET",
            "header": [
              { "key": "fiware-service", "value": "smart" },
              { "key": "fiware-servicepath", "value": "/" }
            ],
            "url": "http://{{host}}:4041/iot/devices"
          }
        },

        {
          "name": "5. Delete device001",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "fiware-service", "value": "smart" },
              { "key": "fiware-servicepath", "value": "/" }
            ],
            "url": "http://{{host}}:4041/iot/devices/device001"
          }
        }
      ]
    },

    {
      "name": "Orion",
      "item": [
        {
          "name": "1. Version",
          "request": { "method": "GET", "url": "http://{{host}}:1026/version" }
        },
        {
          "name": "2. Read Device Entity",
          "request": {
            "method": "GET",
            "header": [
              { "key": "fiware-service", "value": "smart" },
              { "key": "fiware-servicepath", "value": "/" }
            ],
            "url": "http://{{host}}:1026/v2/entities/urn:ngsi-ld:Device:001"
          }
        },
        {
          "name": "3. Command ON",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "fiware-service", "value": "smart" },
              { "key": "fiware-servicepath", "value": "/" }
            ],
            "body": { "mode": "raw", "raw": "{ \"on\": { \"type\": \"command\", \"value\": \"\" } }" },
            "url": "http://{{host}}:1026/v2/entities/urn:ngsi-ld:Device:001/attrs"
          }
        },
        {
          "name": "4. Command OFF",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "fiware-service", "value": "smart" },
              { "key": "fiware-servicepath", "value": "/" }
            ],
            "body": { "mode": "raw", "raw": "{ \"off\": { \"type\": \"command\", \"value\": \"\" } }" },
            "url": "http://{{host}}:1026/v2/entities/urn:ngsi-ld:Device:001/attrs"
          }
        }
      ]
    },

    {
      "name": "STH-Comet",
      "item": [

        {
          "name": "1. Health",
          "request": {
            "method": "GET",
            "url": "http://{{host}}:8666/STH/v1/health"
          }
        },

        {
          "name": "2. motion (history last 50)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "fiware-service", "value": "smart" },
              { "key": "fiware-servicepath", "value": "/" }
            ],
            "url":
"http://{{host}}:8666/STH/v1/contextEntities/type/Device/id/urn:ngsi-ld:Device:001/attributes/motion?lastN=50"
          }
        },

        {
          "name": "3. state (history last 50)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "fiware-service", "value": "smart" },
              { "key": "fiware-servicepath", "value": "/" }
            ],
            "url":
"http://{{host}}:8666/STH/v1/contextEntities/type/Device/id/urn:ngsi-ld:Device:001/attributes/state?lastN=50"
          }
        }
      ]
    }
  ]
}
